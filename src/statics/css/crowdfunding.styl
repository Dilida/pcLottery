
/**
 * 众筹假tab列
 */
.crowdfunding-tabs
    background-color $gray-light
    display flex
    flex 0 0 100%
    max-width 100%
    justify-content space-between
    &__group
        display flex
        align-items center
        .q-btn
            margin-right $basicGap
    &__btn
        display flex
        padding $basicGap 20px
        height 60px
        align-items center
        cursor pointer
        font-size $text-lg
        border-top 3px solid transparent
        color $gray-medium
        &.active
            color $primary
            border-color $primary
            background-color $gray-white-1

/**
 * 众筹筛选列
 */
.crowdfunding-filter
    background-color $gray-white-1
    padding $basicGap
    .q-btn
        margin-right $smallGap
        position relative
        .fas
            position absolute
            opacity 0.3
            right 10px
            top 8px
            &.active
                opacity 1
        .crowdfunding-filter__icon
            margin-left 8px


/**
 * 发起众筹弹窗（选择彩种）
 */
.crowdfunding-popup-list
    // &__title
    &__list
        height 430px
        overflow-y scroll
        text-align center
    &__item
        margin $basicGap 0
        a
            color $tertiary
    &__icon
        img
            width 80px
            height 80px

