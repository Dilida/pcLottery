/**
 * 众筹彩票资讯component
 */
.crowdfunding-lottery
    margin-bottom $basicGap
    padding-bottom $basicGap
    border-bottom 1px solid $gray-white-1
    &__name
        text-align center
        color $secondary
        font-size $text-lg
    img
        width 80px
        height 80px
    &__date
        padding $basicGap
        border-bottom 1px solid $gray-white-1
    &__info
        padding $basicGap

/**
 * 众筹彩列表component
 */
.crowdfunding-list
    max-height 300px
    overflow scroll
    &__title
        padding $basicGap
        border-bottom 1px solid $gray-white-1
    &__item
        border-bottom 1px solid $gray-white-1
        padding $basicGap
    // &__item-name
    &__right
        .btn-cancel
            display inline-block
            vertical-align middle
            color $gray-medium
            border 1px solid $gray-medium
            border-radius 4px
            width 24px
            min-height 24px
            text-align center
            font-size 18px
            i
                line-height 22px
    &__pair
        display inline-block
        vertical-align middle
        padding 0 $basicGap
        min-width 80px
        text-align center
.crowdfunding-footer
    padding $basicGap
    &__count
        color $secondary
        font-size $text-lg
        margin-bottom $basicGap
    &__right
        text-align right

/**
 * 众筹彩下注清单
 */
.crowdfundin-bet-list
    max-height 140px
    overflow auto
    padding $smallGap 0
    &__row
        padding 5px 0
    &__count
        padding 5px 0
        border-top 1px solid $gray-white-1