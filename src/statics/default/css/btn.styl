/* 复制 */
.btn-copy
    width 48px
    height 27px
    padding 0 5px
    color $tertiary
    border-radius 2px
    min-height 22px
    font-size $text-xsm
    $btnCut()
    $btnShadow()

/* 支付 */
.btn-pay
    width 90px
    padding 6px 0
    font-size 13px
    color $gray-medium
    box-shadow 0 0 6px rgba(207, 207, 207, 0.5)
    border-radius $btn-border-radius
    background-color $white
    border 1px solid transparent
    .q-btn-inner
        flex-direction column
    &.active
        background-color transparent
        color $primary
        border-color $primary

/* 优惠活动 */
.btn-activity
    position relative
    padding 0 10px 0 15px
    color #fff
    clip-path polygon(15% 0, 100% 0, 100% 100%, 0% 100%)
    $bgGradient-v4($color2,$color2,$color4,$color4)
    border 1px solid $color2
    border-radius 0px
    &:hover
        $bgGradient-v4($color4,$color4,$color4,$color4)
        border 1px solid $color2


/**
 * 登出按鈕
 */
.q-popover:not(.lottery-entry-wrap) //加上not排除導航全部彩種下拉選單
    .q-list
        &-link
            .q-item
                text-align center
                border-bottom 1px solid #EAEAEA
        &.logout-button
            padding 8px
            text-align center
            button
                background-color $primary
                color $white
                display inline-block
                width 50%

/**
 * 彩种选单
 */
.q-popover
    .lottery-entry
        &__title
            color $primary



