/**
 * 时时彩、11选5
 */
for ssc in $bead-ssc
    .bead-lottery-{ssc}
        for i in (0..11)
            &.num_{i}
            &.num_0{i}
                background-image $imgUrl('images/bead/round.png')
                background-size 100% 100%
                .active &
                .isActive &
                [active=true] &
                .bead-pastview &
                .lobby-bead &
                    background-image $imgUrl('images/bead/round-pastview.png')
                    color $white
        /* 大厅推荐彩种（有倒计时） */
        .lobby-recommend &
            width w = 36px
            height w
            line-height w
            font-size 24px
            margin 8px 3px

