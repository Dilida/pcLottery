/**
 * text field
 */

.field-normal
    .q-field-label
        color $tertiary
        max-width 70px
        .help-block &
            max-width 83px
        .q-field-label-inner
            min-height 35px
            font-size 12px
            justify-content flex-start
    .q-field-content
        max-width calc(100% - 120px)
        .q-input
            box-shadow 0 1px 5px rgba(0,0,0,0.2) inset
            background-color $gray-white
            &.q-if-disabled
                background-color transparent
            border-radius 3px
            height 35px
            input
                line-height 35px
                height 35px
                &::-webkit-input-placeholder
                &::-moz-placeholder
                &:-ms-input-placeholder
                &::placeholder
                    font-size $text-xsm
            .q-if-control
                font-size $text-lg


/**
 * login bar field
 */
.field-bar
    .q-field-content
        .q-input
            box-shadow 0 1px 2px #929292 inset
            min-height auto !important
            &.input-account
            &.input-password
                width 97px
            &.input-code
                width 59px
            input
                line-height 20px
                height 20px
                font-size 12px
                padding 0 5px
            .q-icon
                font-size 14px
                line-height 20px
            .q-if-inner
                min-height auto !important
                height 22px
    &-code
        .q-field-content
            display inline-flex
            .q-input
                display flex
        &__img
            display flex
            width 35px
            height 22px

