/**
 * 下注input
 */
.bet-input
    box-shadow 0 1px 5px $gray-light-2 inset
    background-color $white
    margin-right 10px
    width 140px
    input
        box-shadow 0 1px 5px rgba(0,0,0,0.2) inset
        background-color $gray-white
        border-radius 3px
        line-height 30px
        height 30px
        font-size $text-xlg
        color $primary
        padding 0 5px
        &::-webkit-input-placeholder
        &::-moz-placeholder
        &:-ms-input-placeholder
        &::placeholder
            font-size $text-xsm
    .q-if-control
        align-self center
        font-size $text-lg

/**
 * 复杂的下拉选单
 */
.q-datetime-input
.q-select
    background-image $imgUrl('images/btn-cut/btn-select.png'),$imgUrl('images/btn-cut/btn-left.png'),$imgUrl('images/btn-cut/btn-center.png')
    background-repeat no-repeat
    background-position right center, left center, center center
    background-size auto 100%, 5px 100%, 100% 100%
    min-width 150px
    max-width 300px
    height 35px
    padding-left 5px
    padding-right 5px
    align-items center
    border-radius 4px
    //$btnShadow()
    .q-icon
        display none

.form-content
    width 340px
    margin 0 auto