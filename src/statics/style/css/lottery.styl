/**
 * 投注资讯与按钮
 */
.play-bet
    display flex
    padding 10px
    flex-direction row
    margin-bottom 10px
    align-items center
    &__info
        flex 0 0 450px
        max-width 450px
    &__input
        flex-wrap nowrap
        min-width 230px
    &__btn
        flex 0 0 200px
        max-width 200px
    &__count
        min-width 170px
        align-items center
        line-height 30px
        border-radius 3px
        margin-right 15px
        padding 0 10px
        white-space nowrap

/**
 * 双面长龙
 */
.dslong-item
    .dslong-title
        margin-top 10px

/**
 * 路珠
 */
.road-tabs
    width 630px
    position relative
.road-content
    position relative
    z-index 10
/**
 * 投注纪录状态
 */
.record-status
    font-size 12px

/**
 * 投注左侧标题
 */
//预设隐藏
.lottery-bet-section
.lottery-road-bead
    display flex
    .lottery-subtitle
        display flex
        flex 0 0 42px
        max-width 42px
        border 1px solid #E4E4E4
        padding 88px 10px
        text-align center
        color #9B9B9B
        background $imgUrl('images/lottery-subtitle.png') no-repeat bottom left #F6F6F6
        background-size 37px auto
        margin-top 3px
    .lottery-right-main
        display flex
        flex 0 0 676px
        max-width 676px
        flex-direction column