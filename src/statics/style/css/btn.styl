/**
 * button
 */
/* 通用型 */
.btn-primary
.btn-secondary
.btn-logout
.btn-reg
    min-height 30px
    border-radius 4px
// .btn-cancel
//     color $gray-medium
//     border 1px solid $gray-medium
//     border-radius $btn-border-radius
//     min-height 36px
.btn-secondary
    border 1px solid $primary
    color $primary
    border-radius 4px
    &.active
        background-color $primary
        color $white
.btn-warning
    color $white
    background-color $warning
    border-radius $btn-border-radius

.btn-more
    height 26px
    line-height 26px
    padding 0 5px
    color $white
    border-radius $btn-border-radius
.bbtn-demoplay
    padding 4px 5px

/**
 * size
 */
.btn-lg
    min-height 40px
    min-width 200px
.btn-md
    min-width 120px
.btn-sm
    min-height 30px

