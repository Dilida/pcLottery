/**
 * 特殊型：特殊型独立使用，不适合再加其他效果
 */
/* 余额显示隐藏 */
.btn-balance-show
    color #8d8d8d
    border 1px solid currentColor
    border-radius 3px
    font-size 12px
    line-height 12px
    padding 2px 3px
    margin-left 5px
/* 大厅号码走势 */
.btn-go-bet
    width 103px
    height 36px
    min-height auto
    .q-btn-inner
        display none
/* 大厅立即投注 */
.btn-trend
    width 103px
    height 36px
    min-height auto
    .q-btn-inner
        display none
/* 向右滚动箭头 */
.btn-right
    width 16px
    height 16px
    padding 0
    background-image $styleUrl('images/btn-right.png')
    background-size 100% 100%
/* 向左滚动箭头 */
.btn-left
    width 16px
    height 16px
    padding 0
    background-image $styleUrl('images/btn-left.png')
    background-size 100% 100%

/* 用在表格标题 */
.btn-table-filter
    height 25px
    padding 0 10px
    color $tertiary
    border 1px solid #E3E3E3
    background-color $white
    font-size 12px
    min-height 25px
    margin-right 5px

