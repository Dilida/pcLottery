/**
 * 时时彩、11选5
 */
for ssc in $bead-ssc
    .bead-lottery-{ssc}
        for i in (0..11)
            &.num_{i}
            &.num_0{i}
                background-image $styleUrl('images/bead/round/'+ i +'.png')
                background-size 100% 100%
                color transparent
                .active &
                .isActive &
                [active=true] &
                .bead-pastview &
                    background-image $styleUrl('images/bead/round/'+ i +'-active.png')

