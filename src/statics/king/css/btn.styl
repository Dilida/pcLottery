/* 下注 */
.btn-bet
    width 120px
    height 30px
    font-size 14px
    color $white
    background $styleUrl('images/btn-bet.png')
    background-size 120px 30px
    .q-icon
        margin-right 5px


/* 复制 */
.btn-copy
    padding 0 5px
    color $primary
    border 1px solid currentColor
    border-radius 3px
    min-height 22px
    font-size $text-xsm

/* 支付 */
.btn-pay
    width 150px
    padding $smallGap
    color #9B9B9B
    border 1px solid currentColor
    border-radius 4px
    background-color $white
    .q-btn-inner
        justify-content flex-start
    &.active
        background-color rgba($primary, 0.2)
        color $primary