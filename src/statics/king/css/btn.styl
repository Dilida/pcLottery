/**
 * button
 */
/* 通用型 */
.btn-primary
.btn-secondary
.btn-logout
.btn-reg
    min-height 30px
    border-radius 4px
.btn-primary
.btn-logout
    color $white
    background-color $primary
.btn-demoplay
.btn-reg
    color #5E5F62
    padding 0px 5px
    .q-btn-inner
        border-bottom 1px solid #5E5F62
.btn-secondary
    border 1px solid $primary
    color $primary
    border-radius 4px
    &.active
        background-color $primary
        color $white
.btn-warning
    color $white
    background-color $warning
    border-radius $btn-border-radius

.btn-more
    height 26px
    line-height 26px
    padding 0 5px
    color $white
    border-radius $btn-border-radius


/**
 * size
 */
.btn-lg
    min-height 40px
    min-width 200px
.btn-md
    min-width 120px
.btn-sm
    min-height 30px



/**
 * 特殊型：特殊型独立使用，不适合再加其他效果
 */
/* 余额显示隐藏 */
.btn-balance-show
    color #8d8d8d
    border 1px solid currentColor
    border-radius 3px
    font-size 12px
    line-height 12px
    padding 2px 3px
    margin-left 5px
/* 大厅号码走势 */
.btn-go-bet
    width 103px
    height 36px
    min-height auto
    background $styleUrl('images/btn-go-bet.png')
    background-size 100% 100%
    color transparent
    .q-btn-inner
        display none
/* 大厅立即投注 */
.btn-trend
    width 103px
    height 36px
    min-height auto
    background $imgUrl('images/btn-trend.png')
    background-size 100% 100%
    color transparent
    .q-btn-inner
        display none
/* 向右滚动箭头 */
.btn-right
    width 16px
    height 16px
    padding 0
    background-image $styleUrl('images/btn-right.png')
    background-size 100% 100%
/* 向左滚动箭头 */
.btn-left
    width 16px
    height 16px
    padding 0
    background-image $styleUrl('images/btn-left.png')
    background-size 100% 100%

/* 用在表格标题 */
.btn-table-filter
    height 25px
    padding 0 10px
    color $tertiary
    border 1px solid #E3E3E3
    background-color $white
    font-size 12px
    min-height 25px
    margin-right 5px
    &.active
        border 1px solid $primary

