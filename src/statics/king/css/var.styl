/**
 * 覆蓋quasar預設變數（顏色為主）
 * 注意：勿更改或刪除變數名稱，僅更改值
 * https://quasar-framework.org/components/stylus-variables.html
 */

$tertiary  = #4A4A4A

$positive  = #7ed321
$negative  = #C02728
$info      = #31CCEC
$warning   = #F5A623

$white = #fff

$body-color = #000
$body-background = #fff

$modal-body-color = rgba(#000, 0.8)

/**
 * 自訂顏色
 */

/* 因应上线暂放 */
$mask = rgba(#000, 0.7) //跑马灯背景
$gray-white = #F9F9F9 //footer-bg
$gray-white-1 = #F7F7F7 //accr-bg 左侧选单背景整合F6F6F6
$gray-white-2 = #F3F3F3 //line 整合F2F2F2
$gray-light = #EDEDED // 手風琴表頭 表格線ECECEC tab列背景EFEFEF 按鈕邊框
$gray-light-1 = #E9E9E9 // 左侧选单选中
$gray-light-2 = #E5E5E5 // 左侧选单分隔线
$gray-light-3 = #BCBCBC //重置按鈕
$gray-medium = #9B9B9B // 次要字

/**
 * 自訂顏色
 */
$primary-active = $secondary

/* 双面长龙 */
$dslong-1 = #7ED321
$dslong-2 = #FFB900
$dslong-3 = #50ACDE
$dslong-4 = #FF5617
$dslong-5 = #DC5C9F

/* 号球 */
$bead-round = $primary
$bead-round-active = #E65160
$bead-round-pastview = #F59800
$bead-red = #D0021B
$bead-blue = #0044D8
$bead-green = #417505
$bead-gray = $tertiary

/* 路珠 */
$road-big = #D0021B
$road-small = #1CB6F8
$road-mid = #76CD17

/* 间距 */
$basicGap = 15px
$smallGap = 10px

/**
 * 文字
 */
$text-xlg = 18px
$text-lg = 15px
$text-md = 13px
$text-sm = 12px
$text-xsm = 12px

/**
 * 共用圖片路徑
 */
$imgFolder = $path + 'statics/king/'
$imgUrl(v)
    url($imgFolder + (v))