/**
 * tabs
 */
.tabs
    border-radius 4px
    overflow hidden
    >.q-tabs-head
        min-height auto
        position relative
        .q-tab
            min-height auto
            height 37px
            padding 4px 15px
            // &.active
            .q-tab-label
                max-width 110px
                overflow hidden
                text-align left
                opacity 1
            &.active
                background-color $primary-active
        .q-tabs-bar
        .q-tabs-global-bar-container
            display none
    >.q-tabs-panes
        border-radius 0 0 4px 4px
        background-color $white
        border-color #E5E5E5
        .q-tab-pane
            padding 0
    .deposit-wrap-bg
        background-color #f8f8f8
/* tab 中的 tab （充值-钱包支付） */
.tabs-sub.q-tabs-position-top
    >.q-tabs-head
        .q-tab
            padding 5px 10px
            &.active
                color $primary !important
    >.q-tabs-panes
        border 1px solid #E3E3E3


/* 个人中心用的tab */
.account-passward-manage
.deposit
.account-manage
    .tabs
        margin 0 -15px
        background-color transparent
        >.q-tabs-head
            position relative
            z-index 11
            font-size 14px
            padding 0 5px
            background-color transparent
            .q-tab
                border-radius 8px 8px 0 0
                border 1px solid #E3E3E3
                margin 0 5px
                height 30px
                position relative
                z-index 9
                font-size 12px
                &.active
                    background-color $white
                    color $secondary !important
                    border-bottom-color $white
            &:after
                content ''
                position absolute
                bottom 0
                left 0
                right 0
                z-index 8
                height 1px
                background-color #E5E5E5
        >.q-tabs-panes
            border none
            position relative
            z-index 10
            top -1px
            padding 20px

/**
 * 首頁、投注页sidebar
 */
.site-panel
    margin-bottom $basicGap
    &__header
        height 37px
        display flex
        justify-content space-between
        align-content center
        padding 0 $smallGap
        border-radius 4px 4px 0 0
        background-color $primary
        color $white
        .q-icon
            margin 0
    &__header-title
        align-self center
        font-size $text-lg
    &__header-btn
        align-self center
    &__body
        background-color $white
        border 1px solid #E5E5E5
    &__item
        border-top 1px solid #EDEDED
        justify-content space-between
        &:nth-child(odd)
            background-color #F3F3F3
        &-date
            display flex
            flex 0 0 100%
            width 100%
            justify-content space-between
            margin-bottom 5px
            font-size $text-xsm
        &-bead
            width 100%
            text-align center
            span
                margin 0 2px
    &__item-content
        padding 5px
        word-break break-all
    &__tag
        &-item
            font-size 12px
            text-align center
            background-color white
            color #4A4A4A
            height auto
            line-height unset
            padding 5px 10px
            &:first-child
                border-right 1px solid $white
                text-align left
    &__record-play
        color $secondary
    &__record-date
        font-size $text-xsm
    &__record-amount
        font-size $text-xsm
        color #FF5617
/**
 * TABLE组件
 */
/* table（表格不含标题列）*/
.table-group
    margin 0 -15px
    width auto
.table-header
    height auto
    padding 20px 10px
    background-color #F3F3F3
    border-top 1px solid #E3E3E3
    border-bottom 1px solid #E3E3E3
    border-radius 0
    color $tertiary
.table
    font-size 13px
    td
    th
        padding 5px
    &.winner-list
        border-color #E5E5E5
        td
        th
            padding 7px 8px
            background-color $white
            &:first-child
                width 50px
        thead
            th
                height 40px
        tbody
            .icon-ranking
                display inline-block
                width 17px
                height 17px
                line-height 17px
                border-radius 3px
                text-align center
                background-color $primary
                color $white
            tr
                border-top 1px solid #E5E5E5
                &:nth-child(1)
                &:nth-child(2)
                &:nth-child(3)
                    color #C02728
                    .icon-ranking
                        background-color #c02728
                &:nth-child(odd)
                    background-color #F5F5F5
                &:nth-child(even)
                    background-color $white
    &.last-award
        font-size 12px
        border 1px solid #ebebeb
        thead
            th
                height 24px
                background-color $white
                color #4A4A4A
                &:first-child
                    width 108px
        tbody
            tr
                border-top 1px solid #ebebeb
                &:nth-child(odd)
                    background-color #f5f5f5
                &:nth-child(even)
                    background-color $white
            td
                padding 5px
            td:first-child
                border-right 1px solid #ebebeb
            .pastview-win-number
                letter-spacing -1px
                color #D0021B
                &:after
                    content ','
                    margin 0 -2px
                &:last-child
                    &:after
                        display none
            .lhc-beads:nth-child(6):after
                display none